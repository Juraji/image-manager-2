<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="BOTTOM_RIGHT" prefHeight="244.0" prefWidth="210" style="-fx-border-color: transparent; -fx-border-width: 1px;" type="VBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <BorderPane minHeight="200.0" minWidth="200.0" style="-fx-background-color: #333333;" VBox.vgrow="NEVER">
        <center>
            <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        </center>
    </BorderPane>
    <Label fx:id="directoryLabel" maxWidth="200.0" prefWidth="200.0" text="Directory" />
    <Label fx:id="fileNameLabel" maxWidth="200.0" prefWidth="200.0" text="File Name" textAlignment="RIGHT" />
    <Label fx:id="fileSizeDimensionsLabel" prefWidth="200.0" text="File Size and Dimensions" />
    <HBox alignment="CENTER_RIGHT" spacing="5.0" VBox.vgrow="NEVER">
        <Button fx:id="moveItemButton" mnemonicParsing="false" text="Move" />
        <Button fx:id="deleteFromDiskButton" mnemonicParsing="false" text="Delete" />
    </HBox>
</fx:root>
